<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/signin_screen"
    tools:context=".SignInActivity">

    <!-- This is User ID input section -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="30dp"
        app:hintTextColor="@color/black"
        android:padding="10dp"
        app:startIconDrawable="@drawable/person_logo"
        app:boxStrokeColor="@color/yellow"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etUserID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Your User ID"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:inputType="text"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <!--  Sign Up button code here  -->
    <Button
        android:id="@+id/btnSignIn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/yellow"
        android:padding="10dp"
        android:text="SIGN IN"
        android:textColor="@color/black"
        android:textSize="25sp" />
    <!--have an account code here-->
    <TextView
        android:id="@+id/haveAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/yellow"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:padding="10dp"
        android:text="If You Not Alredy Sign Up then SIGN UP"
        android:textSize="16sp" />

</LinearLayout>